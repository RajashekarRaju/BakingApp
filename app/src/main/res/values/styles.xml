<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TabLayoutStyleCustom" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">@color/colorTabIndicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextColor">@color/selected_highlight</item>
        <item name="tabIconTint">@color/selected_highlight</item>
    </style>

    <style name="PodcastToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="titleTextAppearance">@style/PodcastToolbarTextStyle</item>
    </style>

    <style name="PodcastToolbarTextStyle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConnectionRefreshMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="strokeColor">#FFFFFF</item>
    </style>

</resources>
